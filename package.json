{
  "name": "backend-solution",
  "version": "1.0.0",
  "description": "New boilerplate to handle error, validation, logging, monitoring and etc to create backend from scratch",
  "main": "src/server.js",
  "scripts": {
    "kill": "lsof -t -i tcp:3000 | xargs kill",
    "prebuild": "rimraf build",
    "dev": "npm run kill && NODE_ENV=development ts-node-dev --transpile-only --respawn --no-notify --quiet --clear src/server.ts",
    "build": "npm run prebuild && NODE_ENV=production tsc",
    "start": "npm run kill && NODE_ENV=production node build/src/server.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "docs": "rimraf docs && typedoc --options typedoc.json",
    "prepare": "husky install"
  },
  "keywords": [
    "boilerplate",
    "express",
    "backend"
  ],
  "author": "Kasra Karami <Kasra.Karami.KK@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/config": "^3.3.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.3.1",
    "@types/pg": "^8.10.2",
    "@types/reflect-metadata": "^0.1.0",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^2.1.1",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "bcryptjs": "^2.4.3",
    "builtin-request": "^1.1.1",
    "bullmq": "^4.0.0",
    "chalk": "4.1.2",
    "config": "^3.3.9",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "firebase-admin": "^11.9.0",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "mailgun.js": "^9.1.0",
    "method-override": "^3.0.0",
    "mongodb": "^5.6.0",
    "pg": "^8.11.0",
    "prettier": "^2.8.8",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.9.0",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
